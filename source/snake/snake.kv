<MainScreen>:
    orientation: 'vertical'

    BoxLayout:
        size_hint_y: None
        height: '40sp'
        padding: 5
        spacing: 20
        canvas:
            Color:
                rgba: 1, 0, 0, 0.2
            Rectangle:
                size: self.size
                pos: self.pos

        MenuButton:
            text: 'Start'
            on_press: game.start_game()

        MenuButton:
            text: 'Size'

        MenuButton:
            text: 'Speed'

        MenuLabel:
            text: 'Score: ' + str(game.score)

        Label:

        MenuButtonSmall:
            canvas:
                Rectangle:
                    source: 'icons/help.png'
                    size: self.size
                    pos: self.pos
            on_release: root.help()


        MenuButtonSmall:
            canvas:
                Rectangle:
                    source: 'icons/power.png'
                    size: self.size
                    pos: self.pos
            on_release:
                game.bye()
                app.stop()

    GridLayout:
        cols: 3
        on_size: game.set_size()
        canvas:
            Color:
                rgba: 0, 1, 1, 0.2
            Rectangle:
                size: self.size
                pos: self.pos
        
        Label:
        Label:
        Label:

        Label:
        GameBoard:
            id: game
            size_hint: None, None
            canvas.before:
                Color:
                    rgba: 250/255, 248/255, 239/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
        
        Label:
        Label:
        Label:


########################### Snake parts #####################################

<GridElement>:
    size_pixels: app.root.ids.game.size_pixels
    grid: app.root.ids.game.size_grid
    size: self.size_pixels, self.size_pixels


<SnakePart>:
    canvas.before:
        Color:
            rgba: 140/255, 198/255, 62/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeHead>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: self.image
            pos: self.pos
            size: self.size

############################## Food ########################################
<Food>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: self.image
            pos: self.pos
            size: self.size


############################## Popup ########################################
<PopupWin>
    size_hint: None, None
    size: '250sp', '100sp'

<PopupMsg>
    padding: 20, 20
    font_size: '20sp'
    size_hint_x: None
    size: self.texture_size

############################## Menu ########################################

<MenuButton>:
    font_size: '20sp'
    size_hint_x: None
    size: self.texture_size
    padding: 5, 5

<MenuButtonSmall>:
    size_hint_x: None
    width: self.parent.height * 0.8
    padding: 10, 10

<MenuLabel>:
    font_size: '20sp'
    size_hint_x: None
    size: self.texture_size
    padding: 5, 5
