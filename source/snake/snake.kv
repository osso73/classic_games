<MainScreen>:
    orientation: 'vertical'

    BoxLayout:
        size_hint_y: None
        height: root.height / 10 * 0.5
        padding: 5
        spacing: 20
        canvas:
            Color:
                rgba: 1, 0, 0, 0.2
            Rectangle:
                size: self.size
                pos: self.pos
                
        MenuButton:
            text: 'Start'
            on_press: game.start_game()
            
        MenuButton:
            text: 'Size'
            # on_press: root.dar_pista()
            
        MenuButton:
            text: 'Speed'
            # on_press: root.dar_pista()
            
        MenuLabel:
            text: 'Score: ' + str(game.score)

        Label:
        MenuButton:
            text: 'Exit'
            on_release: 
                game.bye()
                app.stop()
    
    GameBoard:
        id: game
        canvas.before:
            Color:
                rgba: 250/255, 248/255, 239/255, 1
            Rectangle:
                pos: self.pos
                size: self.size


########################### Snake parts #####################################

<SnakePart>:
    canvas.before:
        Color:
            rgba: 140/255, 198/255, 62/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeHead>:
    canvas.before:
        Rectangle:
            source: self.image
            pos: self.pos
            size: self.size

############################## Food ########################################
<Food>:
    canvas.before:
        Rectangle:
            source: self.image
            pos: self.pos
            size: self.size


############################## Popup ########################################
<PopupMsg>
    padding: 20, 20
    font_size: 120
    texture_size: self.size
    size: self.texture_size

############################## Menu ########################################

<MenuButton>:
    font_size: 120
    texture_size: self.size
    size: self.texture_size
    padding: 20, 20

<MenuLabel>:
    font_size: 120
    texture_size: self.size
    size: self.texture_size
    padding: 20, 20
