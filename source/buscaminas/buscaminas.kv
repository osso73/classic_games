
<MainScreen>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 250/255, 248/255, 239/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: menu
        orientation: 'horizontal'
        size_hint_y: None
        height: root.height / 10 * 0.8
        padding: 10
        spacing: 5
        canvas:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                size: self.size
                pos: self.pos
                
        Indicator:
            text: '{:04}'.format(field.mines)

        StartButton:
            id: start_button

        Indicator:
            text: '{:04}'.format(field.time)
    
    Field:
        id: field
    
    BoxLayout:
        Label:
            text: 'empty space'


<Field>:
    canvas:
        Color:
            rgba: 0.8, 0.8, 0.8, 1
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: None, None
    size: self.parent.width, self.parent.width
    cols: self.columnas
    Label:
        text: 'oriol'

<Area>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
            source: self.show

<Indicator>:
    bold: True
    color: 1,0,0,1
    font_size: 120
    size: self.texture_size
    texture_size: self.size
    padding: 50, 20
    font_name: 'fonts/digital-7 (mono)'
    canvas.before:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            size: self.size
            pos: self.pos            

<StartButton>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            size: min(self.height, self.width), min(self.height, self.width)
            pos: self.parent.width / 2 - 0.5*min(self.height, self.width), self.y
            # source: 'images/playing.png'
            source: self.button_face
