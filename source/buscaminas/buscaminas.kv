
<MainScreen>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 250/255, 248/255, 239/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: menu
        orientation: 'horizontal'
        size_hint_y: None
        height: root.height / 10 * 0.8
        padding: 10
        spacing: 5
        canvas:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                size: self.size
                pos: self.pos
                
        Indicator:
            text: '{:03}'.format(field.mines)

        MenuButton:
            id: size_button
            options: ['lev1', 'lev2', 'lev3']
            

        StartButton:
            id: start_button
        
        MenuButton:
            id: flag_button
            options: ['covered', 'bandera']
            
            

        Indicator:
            text: '{:03}'.format(field.time)
    
    Field:
        id: field
    
    BoxLayout:
        Label:
            text: 'empty space'


<Field>:
    canvas:
        Color:
            rgba: 0.8, 0.8, 0.8, 1
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: None, None
    size: self.parent.width, self.parent.width
    cols: self.columnas

<Area>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
            source: self.show

<Indicator>:
    bold: True
    color: 1,0,0,1
    font_size: 120
    size: self.texture_size
    texture_size: self.size
    padding: 5, 5
    font_name: 'fonts/digital-7 (mono)'
    canvas.before:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            size: self.size
            pos: self.pos            

<StartButton>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            size: self.height, self.height
            pos: self.x + self.width / 2 - 0.5*self.height, self.y
            source: self.button_face

<FlagButton>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.height, self.height
            pos: self.x + self.width / 2 - 0.5*self.height, self.y
            source: self.button_face

<SizeButton>:
    text: self.option
    color: 0,0,0,1
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.height, self.height
            pos: self.x + self.width / 2 - 0.5*self.height, self.y
            source: self.button_face

<MenuButton>:
    options: ['empty']
    option: self.options[0]
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.height, self.height
            pos: self.x + self.width / 2 - 0.5*self.height, self.y
            source: self.button_face
