<MainScreen>:
    orientation: 'vertical'
    id: main
    BoxLayout:
        id: menu
        orientation: 'horizontal'
        size_hint_y: None
        height: root.height / 10 * 0.5
        padding: 5
        spacing: 5
        canvas:
            Color:
                rgba: 1, 0, 0, 0.2
            Rectangle:
                size: self.size
                pos: self.pos
                
        MenuButton:
            text: 'Nuevo'
            on_release: puzzle.start_game()
        MenuLabel:
            text: 'Movimientos: ' + str(puzzle.movimientos)
            size_hint_x: 3
        MenuButtonSmall:
            text: 'X'
            on_release: 
                root.bye()
                app.stop()
    
    Puzzle:
        id: puzzle
        size_hint: None, None
        size: self.ventana, self.ventana

    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        size_hint_y: None
        height: root.height / 10 * 0.5
        canvas:
            Color:
                rgba: 0,0,1,0.2
            Rectangle:
                pos: self.pos
                size: self.size
        MenuLabel:
            text: 'Configuraci√≥n:'
        MenuButton:
            text: 'Nivel ' + str(root.nivel)
            on_release: root.nivel = root.nivel % 3 + 1
        MenuButton:
            text: muestra.tema
            on_release: muestra.cambiar_tema()
        
    BoxLayout:
        orientation: 'horizontal'
        canvas:
            Color:
                rgba: 0,0,1,0.2
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
        Muestra:
            id: muestra
            cols: puzzle.tamano
            spacing: 5
            size_hint: None, None
            size: self.parent.height, self.parent.height
        Label:
            
    
########################## Menu elements ####################################
<MenuButton>:
    font_size: 120
    texture_size: self.size
    size: self.texture_size
    padding: 20, 20

<MenuButtonSmall>:
    font_size: 120
    texture_size: self.size
    size_hint_x: None
    width: self.parent.height * 0.5
    padding: 50, 50

<MenuLabel>:
    font_size: 120
    size: self.texture_size
    texture_size: self.size
    padding: 20, 20

<Ficha>:
    canvas.before:
        Color:
            rgba: [1,1,1,1] if self.name else [0,0,0,0] 
        Rectangle:
            size: self.size
            pos: self.pos
            source: root.filename

<FichaMuestra>:
    canvas.before:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
            source: f'images/temas/{app.root.ids.muestra.tema}/{app.root.nivel+2}/{root.name}.jpg'
